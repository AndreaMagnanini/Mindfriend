<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditNoteActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_note_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <TextView
        android:layout_below="@id/edit_note_activity_toolbar"
        android:id="@+id/input_title_title"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginBottom="2dp"
        android:background="@color/teal_200"
        android:textColor="@color/black"
        android:maxLines="3"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Title"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/edit_note_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_marginTop="25sp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="center"
            android:textStyle="bold"
            android:inputType="textShortMessage"
            android:singleLine="true"
            android:textSize="22sp"
            android:layout_weight="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_below="@id/edit_note_activity_toolbar"
        android:id="@+id/input_title_text"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:layout_marginTop="85sp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginBottom="2dp"
        android:textColor="@color/black"
        android:background="@color/teal_200"
        android:maxLines="3"
        android:gravity="center"
        android:textSize="15sp"
        android:text="Note"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_below="@id/edit_note_activity_toolbar"
        android:label = "Edit Note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="105sp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:ems="10"
            android:inputType="textMultiLine"
            android:textSize="17sp"
            android:layout_weight="1"
            android:gravity="top" />


    </com.google.android.material.textfield.TextInputLayout>
</RelativeLayout>